{# app/Resources/FOSUserBundle/views/Resetting/request_content.html.twig #}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <section>
        <div class="container">
            <div class="row boxing-canvas mt-50 center">
                <div class="col-md-6 col-md-offset-3">
                    <i class="fas fa-user-lock text-center degradeblue" style="font-size: 50px"></i>
                    <h5 class="text-center degradeblue">Mot de passe oublié</h5>
                    <p class="normal-subtitle-text text-justify center">Vous pourrez rénitialiser votre mot de passe une fois votre adresse email renseignée.</p>
                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                        <div class="col-md-12">
                            <label for="username" class="form-group"></label>
                            <input type="text" class="form-control input-field" id="username" name="username" required="required" placeholder="Adresse email"/>
                            <input type="submit" id="_submit" name="_submit" class="mt-20 btn btn-primary backblue-btn" value="{{ 'Envoyer'|trans }}" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="row subtitle-boxing-canvas">
                <!-- Forgotten password -->
                <div class="col-sm-12 forgotten-password normal-subtitle-text">
                    <i class="fas fa-sign-in-alt"></i>&nbsp;&nbsp; Mot de passe retrouvé ?
                    <a href="{{ path('fos_user_security_login') }}" class="five-color"> Connecte toi !</a>
                    <br>
                    <i class="fas fa-user-plus"></i>&nbsp; Nouveau sur Galibelum ?
                    <a href="{{ path('fos_user_registration_register') }}" class="orange-color"> Créer un compte</a>
                </div>
                <!-- End forgotten password -->
            </div>
        </div>
    </section>
{% endblock %}