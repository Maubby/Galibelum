{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Mot de passe oublié</h3>
                <p>Vous pourrez rénitialiser votre mot de passe une fois votre adresse email renseignée.</p>
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div class="col-md-12">
                        <label for="username" class="form-group">{{ 'Email * :'|trans }}</label>
                        <input type="text" class="form-control" id="username" name="username" required="required" />
                    </div>
                    <div class="col-md-3 col-md-offset-3">
                        <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'Envoyer'|trans }}" />
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <a href="https://placeholder.com"><img src="http://via.placeholder.com/350x450"></a>
            </div>
        </div>
    </div>
{% endblock %}