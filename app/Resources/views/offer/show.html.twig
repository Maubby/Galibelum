{% extends 'base.html.twig' %}

{% block body %}
    <h1>Offer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offer.name }}</td>
            </tr>
            <tr>
                <th>Namecanonical</th>
                <td>{{ offer.nameCanonical }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if offer.date %}{{ offer.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ offer.amount }}</td>
            </tr>
            <tr>
                <th>Handlingfee</th>
                <td>{{ offer.handlingFee }}</td>
            </tr>
            <tr>
                <th>Partnershipnumber</th>
                <td>{{ offer.partnershipNumber }}</td>
            </tr>
            <tr>
                <th>Finaldeal</th>
                <td>{{ offer.finalDeal }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ offer.status }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{% if offer.signature %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('offer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('offer_edit', { 'id': offer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
