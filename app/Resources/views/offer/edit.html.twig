{% extends 'base.html.twig' %}

{% block body %}
    <h1>Offer edit</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {{ form_start(edit_form) }}

                <div class="form-group">
                    {{ form_label(edit_form.name) }}
                    {{ form_widget(edit_form.name) }}
                    {{ form_errors(edit_form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.description) }}
                    {{ form_widget(edit_form.description) }}
                    {{ form_errors(edit_form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.date) }}
                    {{ form_widget(edit_form.date) }}
                    {{ form_errors(edit_form.date) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.amount) }}
                    {{ form_widget(edit_form.amount) }}
                    {{ form_errors(edit_form.amount) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.partnershipNumber) }}
                    {{ form_widget(edit_form.partnershipNumber) }}
                    {{ form_errors(edit_form.partnershipNumber) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.activity) }}
                    {{ form_widget(edit_form.activity) }}
                    {{ form_errors(edit_form.activity) }}
                </div>

                <input type="submit" value="Edit" class="btn btn-primary">
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <ul>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('dashboard_index') }}">Revenir au Dashboard</a>
        </li>
    </ul>
{% endblock %}