{% extends 'base.html.twig' %}

{% block body %}
    <h1>Organization</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Namecanonical</th>
                <td>{{ organization.nameCanonical }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ organization.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ organization.email }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ organization.description }}</td>
            </tr>
            <tr>
                <th>Userrole</th>
                <td>{{ organization.userRole }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ organization.status }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ organization.address }}</td>
            </tr>
            <tr>
                <th>Relationnumber</th>
                <td>{{ organization.relationNumber }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ organization.isActive }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('organization_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('organization_edit', { 'id': organization.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
