{# app/Resources/default/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard - Structure{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/dashboard.css') }}">
{% endblock %}
{% block body %}
    <!-- PASSED W3C VALIDATOR https://validator.w3.org/ -->
    <!-- Zero intern console warning -->
    <div class="container pt-100 pb-60">
        <div class="row">
            <div class="col-md-3 col">
                <div class="card">
                    <ul class="list-group">
                        <li class="list-group-item text-center"><p>Bienvenue {{ name }}</p></li>
                        {% for organization in organization %}
                            <li class="list-group-item text-left">{{ organization.name }}</li>
                            <li class="list-group-item text-left">{{ organization.phoneNumber }}</li>
                            <li class="list-group-item text-left">{{ organization.email }}</li>
                            <li class="list-group-item text-left">{{ organization.address }}</li>
                            <li class="list-group-item text-left text-muted"><a href="{{ path('organization_edit', { 'id': organization.id }) }}">Modifier votre structure</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-offset-1 col-md-4">
                <div class="panel panel-default">
                    <h3 class="text-center">Mes Activités</h3>
                    <div class="panel-body">
                        <div id="myCarousel" class="carousel vertical" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                {% for activity in activities %}
                                    <div class="{% if loop.first %}active{% endif %} item">
                                        <div class="panel panel-primary">
                                            <h5 class="panel-title text-center">{{ activity.name }}</h5>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <p class="panel-item col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-4 col-xs-offset-2">{{ activity.type }}</p>
                                                    <p class="panel-item col-md-6 col-sm-6 col-xs-6">{{ activity.date }}</p>
                                                </div>
                                                <a href="{{ path('activity_show', { 'id': activity.id }) }}" class="btn btn-primary center-block">Plus de détails</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            <!-- Controls -->
                            <a class="up carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="down carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                                <span class="sr-only">next</span>
                            </a>
                        </div>
                        <a href="{{ path('activity_new') }}" class="btn btn-primary panel-btn">Ajouter une activité</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <h3 class="text-center">Mes offres</h3>
                    <div class="panel-body">
                        <div id="myCarouselActivity" class="carousel vertical" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                {% for offer in offers %}
                                    <div class="{% if loop.first %}active{% endif %} item">
                                        <div class="panel panel-primary">
                                            <h5 class="panel-title text-center">{{ offer.name }}</h5>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <p class="panel-item col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-4 col-xs-offset-2">{{ offer.amount }}</p>
                                                    <p class="panel-item col-md-6 col-sm-6 col-xs-6">{{ offer.date|date("d M Y") }}</p>
                                                </div>
                                                <a href="{{ path('offer_show', { 'id': offer.id }) }}" class="btn btn-primary center-block">Plus de détails</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            <!-- Controls -->
                            <a class="up carousel-control" href="#myCarouselActivity" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="down carousel-control" href="#myCarouselActivity" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <a href="{{ path('offer_new') }}" class="btn btn-primary panel-btn">Ajouter une offre</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/carousel.js') }}"></script>
{% endblock %}
