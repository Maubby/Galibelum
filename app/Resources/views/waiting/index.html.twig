                                </div>
                                <div class="col-sm-6">
                                    <p class="contact_galibelum">Contactez Galibelum</p>
                                </div>
                                <div class="col-sm-6">
                                    <p>06 XX XX XX XX</p>
                                    <p>contact@galibelum.fr</p><br>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <a class="backblue btn-custom waiting"
                                       href="{{ path('inscription_index') }}">Retour à l'accueil</a>
                                </div>
                            </div>
                        </div>

                        <!-- Computer image -->
                        <div class="col-md-6 col-sm-10 col-xs-10">
                            <div class="waiting_page_image">
                                <img src="{{ asset('build/images/waiting-page.jpg') }}" alt="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End waiting section -->

