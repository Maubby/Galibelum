    <section id="study" class="study text-center wow fadeIn"  data-wow-duration="2s" data-wow-dealy="1.5s">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="galibelum_waiting_inscription_picture">
                        <!-- Page title -->
                        <div class="galibelum">
                            <h2>Inscription en cours de validation</h2>
                            <div class="separator"></div>
                        </div>

                        <!-- Text center of the screen -->
                        <div class="col-md-6 col-sm-10 col-xs-10">
                            <div class="waiting_text_background">
                                <img src="{{ asset('build/images/waiting-page-logo.png') }}"
