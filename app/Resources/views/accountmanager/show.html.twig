{% extends 'base.html.twig' %}

{% block body %}
    <h1>Accountmanager</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ accountManager.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ accountManager.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ accountManager.lastName }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ accountManager.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ accountManager.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('accountmanager_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('accountmanager_edit', { 'id': accountManager.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
